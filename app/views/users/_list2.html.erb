<h2>User info</h2>
<div class="user-info pb-3">
  <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
  <table class="table">
    <thead>
      <th scope="col">name</th>
      <th scope="col"><%= user.name %></th>
    </thead>
    <tbody>
      <th scope="col">introduction</th>
      <th scope="col"><%= user.introduction %></th>
    </tbody>
    <tbody>
      <th scope="col">follows</th>
      <th scope="col">
        <%= link_to following_user_user_path(user) do %>
          <%= user.following_user.count %>
        <% end %>
      </th>
    </tbody>
    <tbody>
      <th scope="col">followers</th>
      <th scope="col">
        <%= link_to follower_user_user_path(user) do %>
          <%= user.follower_user.count %>
        <% end %>
        </th>
    </tbody>
  </table>
  <%= link_to edit_user_path(user) do %>
     <button type="button" class="btn btn-outline-secondary fas fa-user-cog w-100"></button>
  <% end %>
</div>
