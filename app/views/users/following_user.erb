<h1>Follow Users</h1>
<% if @user.follower != nil%>
    <table>
      <thead>
      <th scope="col">image</th>
      <th scope="col">name</th>
      <th></th>
    </thead>
    <% @user.following_user.each do |user| %>
    <tbody>
        <td>
         <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg", size: "40x40" %>
        </td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.following_user.count %></td>
        <td>フォロワー数：<%= user.follower_user.count %></td>
        <td><%= link_to "Show", user_path(user) %></td>
    </tbody>
    <% end %>
  </table>
  <% else %>
  <p>ユーザーはいません</p>
  <% end %>