<h2>New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <body>Title</body>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <button type="submit" class="btn btn-success ">Create Book</button>
<% end %>