
<div class="row center-block pt-3">
  <div class="side-bar col-md-3 mw-25">
    <div class="col-12">
        <!--User infoテンプレ-->
      <div class="user-info">
       <%= render 'users/list2', user: @user %>
      </div>
    </div>
    <div class="col-12">
        <!--部分テンプレート-->
    <div class="new-book">
    <%= render 'users/list', book: @booknew %>
    </div>
  </div>
 </div>
  <div class="col-md-8 offset-md-1">
    <div class="book_index">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
        <td>
          <div class="d-flex">
            <div>
          <%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
          <% end %>
          </div>
          <div>
          <%= link_to user_path(@book.user_id) do %>
            <%= @user.name %>
          <% end %>
           </div>
          </div>
        </td>
       <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @user.id == current_user.id %>
        <td>
          <%= link_to "Edit", "/books/#{@book.id}/edit", {class: "btn btn-success"}%>
        </td>
        <td>
          <%= link_to "Destroy", "/books/#{@book.id}", class: "btn btn-danger", method: :delete, data: { confirm: '本当に消しますか？' }%>
        </td>
      <% end %>
    </tbody>
   </table>
   </div>

  </div>
</div>