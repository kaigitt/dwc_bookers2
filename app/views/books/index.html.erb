<% if @book.errors.any? %>
       <% @book.errors.full_messages.each do |message| %>
       <p class="text-danger">error <%= message %></p>
       <% end %>
    <% end %>

<div class="container-md">
    <div class="row center-block pt-3">
  <div class="col-md-3">
    <div class="col-12">
        <!--User infoテンプレ-->
      <div class="user-info">
       <h2>User.info</h2>
       <%= render 'users/list2', user: @user %>
      </div>
  </div>
    <div class="col-12">
        <!--部分テンプレート-->
    <div class="new-book">
    <h2>New Book</h2>
    <%= render 'users/list', book: @book %>
    </div>
  </div>
 </div>
  <div class="col-md-8">
    <div>
      <h2>Books</h2>
     <table class="table table-hover">
      <thead>
      <th></th>
       <th scope="col">title</th>
       <th scope="col">Opinion</th>
       <th></th>
      </thead>
      <% @books.each do |book| %>
      <tbody>
         <td>
           <%= link_to user_path(book.user.id) do %>
           <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40 %>
           <% end %>
           </td>
        <td><%= link_to "/books/#{book.id}" do%><%= book.title %><% end %></td>
        <td><%= book.body %></td>
      </tbody>
      <% end %>
    </table>
   </div>
  </div>
</div>
</div>

