<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#343a40;">
        <div class="container">
          <a class="navbar-brand p-3 text-light" href="/"><span>Bookers2</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
          <li class="nav-item nav-link">
            <%= link_to user_path(current_user.id) do %>
              <i class="fas fa-home">Home</i>
            <% end %>
          </li>
          <li class="nav-item text-light nav-link ">
            <%= link_to users_path do %>
              <i class="fas fa-users">Users</i>
            <% end %>
          </li>
          <li class="nav-item  text-light nav-link">
            <%= link_to books_path do %>
              <i class="fas fa-book-open">Books</i>
            <% end %>
          </li>
          <li class="nav-item text-light nav-link">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt">Logout</i>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item text-light nav-link">
            <%= link_to "/" do %>
              <i class="fas fa-home">Home</i>
            <% end %>
          </li>
          <li class="nav-item text-light nav-link">
            <%= link_to "/home/about" do %>
              <i class="fas fa-link">About</i>
            <% end %>
          </li>
          <li class="nav-item text-light nav-link">
            <%= link_to new_user_registration_path do %>
              <i class="fas fa-user-plus">sign up</i>
            <% end %>
          </li>
          <li class="nav-item text-light nav-link">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt">login</i>
            <% end %>
          </li>
        <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>

    <div class="container">
      <div class="text-primary"><%= flash[:notice] %></div>

      <%= yield %>
    </div>
    </main>


    <footer>
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>


</html>
